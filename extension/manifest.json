{
  "manifest_version": 3,
  "name": "MindFlow - Clinical Note Enhancement",
  "version": "1.0.0",
  "description": "Transform casual counselor notes into Minnesota 245G-compliant progress notes with voice input and clinical language enhancement.",
  
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  
  "host_permissions": [
    "https://api.openai.com/*"
  ],
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["whisper-service.js", "openai-completion-service.js", "mapping-engine.js", "mindflow-ui.js", "content-script.js"],
      "css": ["mindflow-ui.css"],
      "run_at": "document_end"
    }
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "MindFlow"
  },
  
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  
  "icons": {
    "16": "data:image/svg+xml;base64,",
    "32": "data:image/svg+xml;base64,",
    "48": "data:image/svg+xml;base64,",
    "128": "data:image/svg+xml;base64,"
  },
  
  "web_accessible_resources": [
    {
      "resources": ["mindflow-ui.css", "icons/*"],
      "matches": ["<all_urls>"]
    }
  ]
}